@model IEnumerable<ReturnGym.Models.Member >

@{
    ViewBag.Title = "Index";
}
<div style="margin-top:20px;margin-bottom:20px;">
    @if (User.IsInRole("Admin"))
    {
        <a href="@Url.Action("Index", "Admin")" class="btn btn-success pull-right">
            <span class="fa fa-dashboard fa-fw  text-info"></span> Dashboard
        </a>
    }
</div>
<h2 style="margin-top:30px;font-weight:900">Recently Registered Users</h2>
<hr />

<div style="margin-top:20px;margin-bottom:20px;">
    <div style="margin-top:10px;float:left;margin-right: 10px;">
        <a href="@Url.Action("Create", "Members")" class="btn btn-success">
            <span class="fa fa-dashboard fa-fw  text-info"></span> Add Member
        </a>
    </div>
</div>
<br />
<br />
<div class="panel panel-default" style="margin-top:20px;">
    <!-- Default panel contents -->
    <table class="table table-bordered table-striped" style="color:#111;">
        <tr>
            <th>
                @Html.Label("Name")
            </th>
            <th>
                @Html.Label("Email")
            </th>
            <th>
                @Html.Label("Phone")
            </th>
            <th>
                @Html.Label("Joined")
            </th>
            <th>
                @Html.Label("Control")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Username, "Details", "Members", new { id = item.ID }, new { target = "_blank" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoinDate)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>

