@model  ReturnGym.Models.OnlineShopping.Order

@{
    ViewBag.Title = "Details";
}

<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.OrderID }) |*@
    @Html.ActionLink("Back to List", "Index")
</p>

<div class="container" style="margin-top:20px;margin-left:100px;">
    <div class="col-md-9">

        <div class="thumbnail">
            <h4>Order:  @Html.DisplayFor(model => model.OrderID)</h4>
            <hr />
            <div class="caption-full">
                <p>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.Label("Date")
                        </dt>
                        <dd>
                            @String.Format("{0:MM/dd/yyyy}", Model.OrderDate)
                        </dd>
                        <dt>
                            @Html.Label("Name")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CustomerName)
                        </dd>
                        <dt>
                            @Html.Label("Phone")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CustomerPhone)
                        </dd>
                        <dt>
                            @Html.Label("Email")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CustomerEmail)
                        </dd>
                        <dt>
                            @Html.Label("Address")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CustomerAddress)
                        </dd>
                        <dt>
                            @Html.Label("Payment Type")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PaymentType)
                        </dd>
                        <dt>
                            @Html.Label("Status")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                    </dl>
                </p>
                <hr />
                <h3>Purchased Items</h3>
                <table class="table-bordered ">
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Status</th>
                    </tr>
                    @foreach (var item in Model.OrderDetails)
                    {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td>
                        @{
                            if (item.IsSelected == true)
                            {
                                <h4 style="color:#4cff00;font-weight:900;">Successful</h4>
                            }
                            else if (item.IsSelected == false)
                            {
                                <h4 style="color:#ff0000;font-weight:900;">Pending</h4>
                            }
                        }
                    </td>

                </tr>
                    }
                </table>
            </div>
        </div>
       
        @Html.Partial("_OrderControl")
    </div>
</div>