@model ReturnGym.Models.OnlineShopping.Product

@{
    ViewBag.Title = "Details";
}
<h1>@Model.Name, @Model.CatName</h1>
<span></span>
<div style="margin-top:20px;" class="container">
            <a href="@Url.Action("Index", "Products")" class="btn btn-default pull-right">
                <span class="fa fa-dashboard fa-fw  text-info"></span>Go to Products
            </a>
    </div>

<div class="container" style="margin-top:20px;margin-left:100px;">
    <div class="col-md-9">

        <div class="thumbnail">
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.Picture, 0, Model.Picture.Length)" style="width: 350px; height: 300px;padding:20px;" alt="" />
            <div class="caption-full">
                <p>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.Label("Name")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt>
                            @Html.Label("Category")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CatName)
                        </dd>
                        <dt>
                            @Html.Label("Quantity")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>
                        <dt>
                            @Html.Label("Posted On")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Time)
                        </dd>
                        <dt>
                            @Html.Label("Price")
                        </dt>
                        <dd>
                            R @Html.DisplayFor(model => model.Price)
                        </dd>
                    </dl>
                </p>

            </div>
        </div>
        @Html.Partial("_ProductControl")
    </div>
</div>



